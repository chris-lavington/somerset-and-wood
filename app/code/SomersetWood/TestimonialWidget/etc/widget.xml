	            <block class="Staempfli\WidgetExtraFields\Block\Adminhtml\ImageField"/>
	        </parameter>
	        <parameter name="testimoniallink" sort_order="11" visible="true" xsi:type="text">
				<label>Link</label>
			</parameter>
	        <parameter name="testimonialtitle" sort_order="10" visible="true" xsi:type="text">
				<label>Testimonial Title</label>
			</parameter>
	        <parameter name="testimonialtext" xsi:type="block" required="true" visible="true" sort_order="3">
